{
  "name": "youtube-to-mp3-downloader",
  "version": "0.1.0",
  "description": "A minimal Electron application for downloading MP3s from YouTube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "npm-run-all package:*",
    "package:mac": "electron-packager . --overwrite --platform=darwin --arch=x64 --out=out --icon=assets/app-icon/mac/app.icns --osx-sign.identity='Developer ID Application: GitHub' --extend-info=assets/mac/info.plist",
    "package:win": "electron-packager . --overwrite --platform=win32 --arch=ia32 --out=out --icon=assets/app-icon/win/app.ico",
    "package:linux": "electron-packager . --overwrite --platform=linux --arch=x64 --out=out"
  },
  "repository": "https://github.com/fajicbenjamin/youtube-to-mp3-downloader",
  "keywords": [
    "Electron",
    "youtube",
    "mp3",
    "downloader"
  ],
  "author": {
    "name": "Benjamin Fajic",
    "url": "https://github.com/fajicbenjamin"
  },
  "devDependencies": {
    "electron": "^11.0.4",
    "electron-packager": "^15.2.0"
  },
  "dependencies": {
    "axios": "^0.21.0",
    "ffmpeg-binaries": "3.2.2-3",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^7.0.1",
    "node-id3": "^0.2.1",
    "sanitize-filename": "^1.6.1",
    "ytdl-core": "^4.1.5"
  }
}
