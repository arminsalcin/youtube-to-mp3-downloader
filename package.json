{
  "name": "youtube-to-mp3-downloader",
  "version": "0.1.10",
  "description": "A minimal Electron application for downloading MP3s from YouTube",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "package": "electron-builder build --publish never"
  },
  "repository": "github:fajicbenjamin/youtube-to-mp3-downloader",
  "license": "MIT",
  "keywords": [
    "Electron",
    "youtube",
    "mp3",
    "downloader"
  ],
  "author": {
    "name": "Benjamin Fajic",
    "url": "https://github.com/fajicbenjamin"
  },
  "devDependencies": {
    "electron": "^11.1.0",
    "electron-builder": "22.9.1"
  },
  "dependencies": {
    "axios": "^0.21.1",
    "browser-id3-writer": "^4.4.0",
    "electron-updater": "^4.3.5",
    "ffmpeg-static": "4.2.7",
    "fluent-ffmpeg": "^2.1.2",
    "fs-extra": "^7.0.1",
    "ytdl-core": "4.4.5"
  },
  "build": {
    "productName": "Youtube to MP3 Downloader",
    "copyright": "Copyright © 2021 Benjamin Fajić",
    "asarUnpack": [
      "**/app/node_modules/ffmpeg-static/*"
    ],
    "mac": {
      "target": [
        "dmg"
      ],
      "type": "distribution"
    },
    "dmg": {
      "contents": [
        {
          "x": 130,
          "y": 220
        },
        {
          "x": 410,
          "y": 220,
          "type": "link",
          "path": "/Applications"
        }
      ]
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "publish": {
      "provider": "github",
      "owner": "fajicbenjamin",
      "repo": "youtube-to-mp3-downloader",
      "token": "token"
    }
  }
}
